<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/PreceptDef.xsd">

    <PreceptDef Abstract="true" Name="PMM_EvMutationPrecept">
        <issue>PMM_EnvironmentalMutation</issue>

    </PreceptDef>

    <PreceptDef ParentName="PMM_EvMutationPrecept">
        <defName>PMM_EvMutationProhibited</defName>
        <label>prohibited</label>
        <description>Nobody should ever defile the environment by making mutagenic weaponry or tainting the earth with mutagen.</description>
        <impact>High</impact>
        <comps>
            <li Class="PreceptComp_UnwillingToDo">
                <eventDef>SowMutagenicPlants</eventDef>
            </li>
            <li Class="PreceptComp_UnwillingToDo">
                <eventDef>CreateMutagenicWeapon</eventDef>
            </li>
        </comps>
        <associatedMemes>
            <li>HumanPrimacy</li>
            <li>FleshPurity</li>
            <li>Transhumanist</li>
        </associatedMemes>
        <conflictingMemes>
            <li>NaturePrimacy</li>
            <li>PMM_Mutagenesis</li>
            <li>AnimalPersonhood</li>
        </conflictingMemes>
    </PreceptDef>

    <PreceptDef ParentName="PMM_EvMutationPrecept">
        <defName>PMM_EvMutationDisliked</defName>
        <label>disliked</label>
        <description>It's a bad idea to pollute the ground with mutagens.</description>
        <impact>Medium</impact>
        <comps>
            <li Class="PreceptComp_SituationalThought">
                <thought>PMM_UsingMutagenicWeaponBad</thought>
            </li>
            <li Class="PreceptComp_SelfTookMemoryThought">
                <thought>PMM_PlantedMutagenicPlantBad</thought>
                <eventDef>SowMutagenicPlants</eventDef>
            </li>
            <li Class="PreceptComp_SelfTookMemoryThought">
                <thought>PMM_CreatedMutagenicWeaponBad</thought>
                <eventDef>CreateMutagenicWeapon</eventDef>
            </li>
        </comps>
        <associatedMemes>
            <li>HumanPrimacy</li>
            <li>FleshPurity</li>
            <li>Transhumanist</li>
        </associatedMemes>
        <conflictingMemes>
            <li>NaturePrimacy</li>
            <li>PMM_Mutagenesis</li>
            <li>AnimalPersonhood</li>
        </conflictingMemes>
    </PreceptDef>

    <PreceptDef ParentName="PMM_EvMutationPrecept">
        <defName>PMM_EvMutationNeutral</defName>
        <label>neutral</label>
        <description>Mutagens are, for better or for worse, part of the environment. </description>
        <impact>Low</impact>
        <countsTowardsPreceptLimit>false</countsTowardsPreceptLimit>
    </PreceptDef>

    <PreceptDef ParentName="PMM_EvMutationPrecept">
        <defName>PMM_EvMutationLiked</defName>
        <label>liked</label>
        <description>The environment is a product of all its parts. Mutagens are the catalyst to change it to better suit our needs.</description>
        <impact>Low</impact>
        <comps>
            <li Class="PreceptComp_SituationalThought">
                <thought>PMM_UsingMutagenicWeaponGood</thought>
            </li>
        </comps>
        <conflictingMemes>
            <li>HumanPrimacy</li>
            <li>FleshPurity</li>
            <li>Transhumanist</li>
        </conflictingMemes>
        <associatedMemes>
            <li>NaturePrimacy</li>
            <li>PMM_Mutagenesis</li>
            <li>AnimalPersonhood</li>
        </associatedMemes>
    </PreceptDef>

</Defs>