<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Schemas/ThoughtDef.xsd">

    <ThoughtDef Abstract="true" Name="PMM_IsMorphSituationalBase">
        <workerClass>PawnmorpherMutagenesis.Thoughts.Precept.Worker_IsMorph</workerClass>
    </ThoughtDef>

    <ThoughtDef Abstract="true" Name="PMM_IsNotMorphSituationalBase">
        <workerClass>PawnmorpherMutagenesis.Thoughts.Precept.ThoughtWorker_Precept_IsNotMorph</workerClass>
    </ThoughtDef>

    <ThoughtDef ParentName="PMM_IsNotMorphSituationalBase">
        <defName>PMM_IsHuman_MorphRequired</defName>
        <stages>
            <li>
                <baseMoodEffect>-1</baseMoodEffect>
                <description>I'm a human in a culture that says I should be an animal.</description>
                <label>morph required</label>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="PMM_IsMorphSituationalBase">
        <defName>PMM_IsMorph_MorphRequired</defName>
        <stages>
            <li>
                <baseMoodEffect>0</baseMoodEffect>
                <description>I'm a morph, and that's the way it should be.</description>
                <label>morph required</label>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="PMM_IsMorphSituationalBase">
        <defName>PMM_IsMorph_MorphHated</defName>
        <stages>
            <li>
                <baseMoodEffect>-2</baseMoodEffect>
                <description>I'm a morph in a culture that hates me for who I am.</description>
                <label>outsider</label>
            </li>
        </stages>
    </ThoughtDef>

</Defs>