<Defs>
    <HediffDef>
        <defName>PMM_CollarHediff</defName>
        <label>collared</label>
        <description>This pawn has been collared with a sapio-collar, and can have their mental acuity altered on a whim.</description>
        <hediffClass>PawnmorpherMutagenesis.Hediffs.CollarHediff</hediffClass>
		<comps>
            <li Class="HediffCompProperties_RemoveIfApparelDropped" />
        </comps>
        <stages>
            <li>
                <label>sapient</label>
                <minSeverity>0.0</minSeverity>
            </li>
            <li>
				<minSeverity>0.2</minSeverity>
                <label>mostly sapient</label>
                <statOffsets>
                    <SapienceLimit>-0.2</SapienceLimit>
                </statOffsets>
                <minSeverity>0.1</minSeverity>
            </li>
            <li>
				<minSeverity>0.4</minSeverity>
                <label>conflicted</label>
                <statOffsets>
                    <SapienceLimit>-0.4</SapienceLimit>
                </statOffsets>
                <minSeverity>0.2</minSeverity>
            </li>
            <li>
				<minSeverity>0.6</minSeverity>
                <label>mostly feral</label>
                <statOffsets>
                    <SapienceLimit>-0.6</SapienceLimit>
                </statOffsets>
                <minSeverity>0.3</minSeverity>
            </li>
            <li>
				<minSeverity>1</minSeverity>
                <label>feral</label>
                <statOffsets>
                    <SapienceLimit>-1</SapienceLimit>
                </statOffsets>
                <minSeverity>0.4</minSeverity>
            </li>
        </stages>
    </HediffDef>
</Defs>