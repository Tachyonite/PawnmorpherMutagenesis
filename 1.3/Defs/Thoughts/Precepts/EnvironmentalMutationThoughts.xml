<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef>
        <defName>PMM_UsingMutagenicWeaponBad</defName>
        <workerClass>PawnmorpherMutagenesis.Thoughts.Precept.Worker_HasMutagenicWeapon</workerClass>
        <stages>
            <li>
                <label>using mutagenic weapon</label>
                <baseMoodEffect>-10</baseMoodEffect>
                <description>Using these weapons is cruel and unusual.</description>
            </li>
        </stages>
    </ThoughtDef>


    <ThoughtDef>
        <defName>PMM_UsingMutagenicWeaponGood</defName>
        <workerClass>PawnmorpherMutagenesis.Thoughts.Precept.Worker_HasMutagenicWeapon</workerClass>
        <stages>
            <li>
                <label>using mutagenic weapon</label>
                <baseMoodEffect>5</baseMoodEffect>
                <description>Using these weapons is preferable to killing people, at least they still get to live.</description>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>PMM_PlantedMutagenicPlantBad</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stackLimit>4</stackLimit>
        <stages>
            <li>
                <baseMoodEffect>-1</baseMoodEffect>
                <description>These plants are distorted and strange, we shouldn't be growing them.</description>
                <label>planted mutagenic crop</label>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>PMM_CreatedMutagenicWeaponBad</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <stackLimit>4</stackLimit>
        <stages>
            <li>
                <baseMoodEffect>-1</baseMoodEffect>
                <description>These should not be used, though they make a good deterrent.</description>
                <label>created mutagenic weapon</label>
            </li>
        </stages>
    </ThoughtDef>
</Defs>